                </div>
                <!--End Carousel Wrapper-->




                <!-- Infos profil -->
                <div class="col-md-6 sm-12 ">


                    <div class="container bg-transparent mt-5 mb-5 p-2 border border-green col rounded">
                        <h4 class="text-center mt-2">Information</h4>

                        <form action="" method="" class="m2">
                            <div class="form-group">
                                <label>Nom d'utilisateur:</label>
                                <input type="text" name="username" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Adresse Email:</label>
                                <input type="email" name="usermail" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Téléphone:</label>
                                <input type="tel" name="usertel" class="form-control" required>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>Code postal:</label>
                                    <input type="text" name="zip" class="form-control" required>
                                </div>
                                <div class="form-group col-md-8">
                                    <label>Commune:</label>
                                    <input type="text" name="city" class="form-control" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Choisir son atelier préféré:</label>
                                <select name="atelier" class="form-control" id="exampleFormControlSelect1" required>
                                    <option value="1">Atelier Cocagne Alimen'terre</option>
                                    <option value="2">Brico Ordi</option>
                                    <option value="3">Brico Vélo</option>
                                    <option value="4">Brico Vêtements</option>
                                    <option value="5">Atelier Faîtes le vous-mêmes</option>
                                    <option value="6">J'anime mon atelier</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Interets Divers:</label>
                                <input type="text" name="interest" class="form-control">
                            </div>

                        </form>
                    </div>
                </div>
                <!--End Infos profil-->

            </div>
        </div>
