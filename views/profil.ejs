<%-include ../partials/head.ejs%>
    <%-include ../partials/nav.ejs%>

    <!-- variables pour la liste des avatars-->
    <% var avatars = [];
    var avaMax = Math.floor(merci.merci/5)+3;
        for (var i = 2; i < avaMax; i++){
            avatars.push(`img/avatar${i}.png`);
        };
    %>
        <!--Container Row-->
        <div class="container">
            <div class="row">

                <!--Carousel Wrapper-->
                <div class="col-md-6 sm-12">
                    <div class="container mt-5 mb-3 p-3 rounded-xl border border-green">
                        <h3 class="text-blue text-center">Mes Avatars</h3>

                        <!--Slides-->
                        <div id="carouselExampleControls"data-interval="false" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="mx-auto d-block w-60 " src="img/avatar1.png" alt="First slide">
                                </div>
                                    <% avatars.forEach(function(avatars, index){ %>
                                    <div class="carousel-item">
                                        <img class="mx-auto d-block w-60" src="<%= avatars %>" alt="Second slide">
                                    </div>
                                    <% }) %> 
                                <!-- <div class="carousel-item">
                                <img class="mx-auto d-block w-60 img-fluid" src="img/avatar3.png" alt="Third slide">
                                </div> -->
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <p class="text-center text-blue mt-3">Gagnez de nouveaux avatars en recevant des Merci</p>
                            <p class="text-center text-blue m-2">5 Merci = 1 nouvel avatar</p>
                            <!--Nombre Merci-->
                            <button class="btn btn-sm btn-outline-info form-group" name="ID" value="<%= utilisateurs.idUser %>">Actuellement:
                                <span class="badge badge-info ml-1"> <%= merci.merci %> </span><i class="fas fa-hands-helping ml-2"></i>
                            </button>
                            <form action="/avatar" method="post" class="group-form m-1 float-right">
                                <button type="submit" class="btn btn-sm btn-outline-info form-group" name="choixAvatar" id="choixAvatar" value="<%= utilisateurs.idUser %>">Choisir cet avatar
                                    
                                </button>
                            </form>
                        </div>
                            
                

                <!--Contactez-moi (commenté par phil, a mettre uniquement dans profil public-->

                    <!-- <form action="/contactezMoi" method="post" class="group-form m-2">
                        <button type="submit" class="btn btn-sm btn-outline-info float-left form-group"> Contactez-moi !

                        </button>
                    
                    </form> -->
                </div>
                <!--End Carousel Wrapper-->

                <!-- Infos profil -->
                <div class="col-md-6 sm-12">


                    <div class="container mt-5 mb-5 p-3 border border-green col rounded-xl">
                        <h3 class="text-blue text-center mt-2">Mes Informations</h3>

                        <form action="" method="" class="m2">
                            <div class="form-group">
                                <label class="text-blue">Nom d'utilisateur:</label>
                                <input type="text" name="username" class="form-control border-orange" value="<%= utilisateurs.pseudo %>" required>
                            </div>
                            <div class="form-group">
                                <label class="text-blue">Adresse Email:</label>
                                <input type="email" name="usermail" class="form-control border-orange" value="<%= utilisateurs.mail %>" required>
                            </div>
                            <div class="form-group">
                                <label class="text-blue">Téléphone:</label>
                                <input type="tel" name="usertel" class="form-control border-orange" value="<%= utilisateurs.tel %>" required>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label class="text-blue">Code postal:</label>
                                    <input type="text" name="zip" class="form-control border-orange" value="<%= utilisateurs.codePostal %>" required>
                                </div>
                                <div class="form-group col-md-8">
                                    <label class="text-blue">Commune:</label>
                                    <input type="text" name="city" class="form-control border-orange" value="<%= utilisateurs.commune %>" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="text-blue">Atelier préféré:</label>
                                <input type="atelier" name="atelierPref" class="form-control border-orange" value="<%= utilisateurs.Ateliers_idAtelier %>" required>
                            </div>
                            <div class="form-group">
                                <label class="text-blue">Interets Divers:</label>
                                <input type="text" name="interest" class="form-control border-orange" value="<%= utilisateurs.InteretsDivers %>" required>
                            </div>

                        </form>
                    </div>
                </div>
                <!--End Infos profil-->

            </div>
        </div>
        <!--End Container Row-->

        








