                <div class="">
                    <% atelier.forEach(function(atelier, index){ %>
                        <div class="accordion m-3 shadow-sm" id="accordion<%= index %>">
                            <div class="card border border-green rounded">
                                <div class="card-header bg-transparent" id="headingOne">
                                    <h5 class="mb-0 text-orange"><%= atelier.sommaire %>
                                        <button class="btn btn-link float-right" type="button" data-toggle="collapse" data-target="#collapseOne<%= index %>" aria-expanded="true" aria-controls="collapseOne">
                                            <i class="fas fa-angle-down i-big-green"></i>
                                        </button>
                                    </h5> 
                                    <span class="text-green"><%= atelier.dateStart %></span><span class="text-green"><%= atelier.dateEnd %></span>
                                    <p class="text-green"><%= atelier.location %></p>
                                </div>
                                <div>
                                   
                                </div>
                                <div id="collapseOne<%= index %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordion<%= index %>">
                                    <div class="card-body">
                                        <p class="text-secondary"><%- atelier.description %></p>
                                        <h4 class="text-center text-secondary">AVIS</h4>
                                        <div class="panel-body">
                                        <ul class="list-unstyled">
                                        <% avis.forEach(function(avis, index){ %>
                                            <% if (avis.Agenda_idAgenda == atelier.id) { %> 
                                            <li class="">
                                                <div class="d-block">
                                                    <span class="d-block">
                                                        <img src="img/avatar<%= ava %>.png"" alt="User Avatar" class="float-left" width="48px">
                                                        
                                                        <div class="header">
                                                            <strong class="primary-font ml-1"> <%= avis.username %> </strong> <small>
                                                            <span class="glyphicon glyphicon-time float-right"> <%= avis.date %> </span></small>
                                                        </div>
                                                        
                                                    </span><br>
                                                </div>
                                                <div class="d-block">
                                                    <p class="text-align-lef">
                                                            <%= avis.msg %>
                                                    </p>
                                                    <% merci.forEach(function(merci, index){ %>
                                                        <% if (avis.User_idUser == merci.User_idUser) { %>
                                                            
                                                        <form action="/merci" method="post" class="group-form m-2">
                                                            
                                                            <button type="submit" class="btn btn-sm btn-outline-success float-right form-group" name="ID" value="<%= avis.User_idUser %>"><i class="fas fa-hands-helping"></i>  Merci
                                                                <span class="badge badge-success"><%= merci.merci %></span>
                                                            </button>
                                                        </form>
                                                        <% } %>
                                                    <% }) %>
                                                    <br>
                                                    <hr class="bg-orange">
                                                </div>
                                            </li>
                                            <% } %>
                                        <% }) %>
                                        </ul>
                                        </div>
                                        <form action="/addAvis" method="post">
                                            <div class="form-group">
                                                <label for="exampleFormControlTextarea1" class="text-secondary">Laisser un avis</label>
                                                <textarea class="form-control" name="Textarea" rows="3"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="idAtelier" class="form-control d-none" value="<%- atelier.id %>">
                                            </div>
                                        
                                        <div class="row">
                                        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs">
                                            <button name="Submit" type="submit" class="btn btn-outline-success" value="Submit">Envoyer </button>
                                        </div>
                                        </form>
                                        <!-- <input class="btn btn-outline-success bg-green float-right mr-2" type="submit" value="Submit"> -->
